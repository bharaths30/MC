<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.vamsikrishnag.mcassignment1.MainActivity">


    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:id="@+id/name" />
    <TextView
        android:text="Age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/age" />
    <TextView
        android:text="Patient ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/age"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/patid" />
    <TextView
        android:text="Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/patid"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:textSize="20dp"
        android:id="@+id/sex" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:ems="10"
        android:id="@+id/inputname"
        android:selectAllOnFocus="true"
        android:textColorLink="?attr/actionMenuTextColor"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/patid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:text=""
        android:ems="5"
        android:layout_marginStart="50dp"
        android:id="@+id/inputage"
        android:layout_alignBaseline="@+id/age"
        android:layout_alignBottom="@+id/age"
        android:layout_alignStart="@+id/male"
        android:selectAllOnFocus="true" />



    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:textAlignment="center"
        android:text=""
        android:ems="5"
        android:layout_marginStart="27dp"
        android:layout_toRightOf="@+id/patid"
        android:layout_marginTop="21.5dp"
        android:layout_below="@id/inputage"
        android:id="@+id/inputpatid"
        android:textColorLink="?attr/actionMenuTextColor"
        android:selectAllOnFocus="true" />


    <RadioButton
    android:text="Male"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@+id/inputpatid"
    android:layout_toRightOf="@id/sex"
    android:layout_marginTop="21dp"
    android:layout_marginStart="30dp"
    android:id="@+id/male" />

    <RadioButton
        android:text="Female"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/inputpatid"
        android:layout_toRightOf="@id/male"
        android:layout_marginTop="21dp"
        android:layout_marginStart="30dp"
        android:id="@+id/female" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/male"
        android:text="View Heartbeat"
        android:layout_marginTop="30dp"
        android:layout_marginStart="115dp"
        android:id="@+id/start" />

</RelativeLayout>
